<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minneh.minnehkiosk.GumActivity">

    <ImageView
        android:id="@+id/gumImageView"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        app:srcCompat="@drawable/orbit_four"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="-3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="148dp"
        android:layout_height="34dp"
        android:text="Unit Price: KES 10"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="286dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/quantityTextView"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:text="Please Enter Quantity:"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="357dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/gumButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/gumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_border_gum"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="447dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/gumEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignTop="@+id/quantityTextView"
        android:layout_toRightOf="@+id/quantityTextView"
        android:layout_toEndOf="@+id/quantityTextView" />


</RelativeLayout>
